<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Tambah Data Siswa</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>             
            <% } %>

            <form method="post" action="/siswa">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama"
                  required />
                </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="jk" class="form-label">Jenis Kelamin</label>
                <select class="form-select" id="jk" name="jk" required>
                    <option selected disabled>Pilih Jenis Kelamin</option>
                    <option value="P">Perempuan</option>
                    <option value="L">Laki-Laki</option>
                </select>
            </div>
                
            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="nisn" class="form-label">NISN</label>
                <input type="text" class="form-control" id="nisn" name="nisn" required />
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="nik" class="form-label">NIK</label>
                <input type="text" class="form-control" id="nik" name="nik" required />
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="nokk" class="form-label">No. KK</label>
                <input type="text" class="form-control" id="nokk" name="nokk" required />
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="tingkat" class="form-label">Tingkat Kelas Saat Ini</label>
                <select class="form-select" id="tingkat" name="tingkat" required>
                    <option selected disabled>Pilih Tingkat</option>
                    <option value="X">Kelas X</option>
                    <option value="XI">Kelas XI</option>
                    <option value="XII">Kelas XII</option>
                </select>
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="rombel" class="form-label">Rombel</label>
                <select class="form-select" id="rombel" name="rombel" required>
                    <option selected disabled>Pilih Rombel</option>
                    <option value="PPLG 1">PPLG 1</option>
                    <option value="PPLG 2">PPLG 2</option>
                    <option value="RPL 1">RPL 1</option>
                    <option value="RPL 2">RPL 2</option>
                </select>
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="tanggalMasuk" class="form-label">Tanggal Masuk</label>
                <input type="date" class="form-control" id="tanggalMasuk" name="tanggalMasuk" required />
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="terdaftar" class="form-label">Terdaftar</label>
                <select class="form-select" id="terdaftar" name="terdaftar" required>
                    <option selected disabled>Pilih Status Pendaftaran</option>
                    <option value="Siswa Baru">Siswa Baru</option>
                    <option value="Pindahan">Pindahan</option>
                </select>
            </div>

            <form method="post" action="/siswa">
              <div class="mb-3">
                <label for="tempatLahir" class="form-label">Tempat Lahir</label>
                <input type="text" class="form-control" id="tempatLahir" name="tempatLahir" required />
            </div>

                <button type="submit" class="btn btn-primary">Tambah Data Siswa</button>
              </form>
        </div>
    </div>
</div>